{
    "compilerOptions": {
        "target": "ES2024",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": [
            "ES2024"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": false,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}